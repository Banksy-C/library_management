<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.banksy.lm_server.mapper.UserMapper">

    <select id="listUsers" resultType="com.banksy.lm_server.entity.User">
        select * from user
    </select>

    <select id="listByCondition" resultType="com.banksy.lm_server.entity.User">
        select * from user
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{ name }, '%')
            </if>
            <if test="phone != null and phone != ''">
                and phone  like concat('%', #{ phone }, '%')
            </if>
        </where>
    </select>

</mapper>